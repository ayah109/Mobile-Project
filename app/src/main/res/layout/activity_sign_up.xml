<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#E4E2E2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4E2E2"
        android:elevation="0px"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        tools:context=".SignUp">

        <TextView
            android:id="@+id/signUpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:foregroundTint="@color/purple_500"
            android:text="Sign Up Now"
            android:textColor="@color/purple_500"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/firstNameLable_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:padding="2dp"
            android:text="First Name"
            android:textColor="#040000" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstNameTxtLayout_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/firstNameText_SU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textColor="#050000" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/lastNameLable_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:padding="2dp"
            android:text="Last Name"
            android:textColor="#040000" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lastNameTxtLayout_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lastNameText_SU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textColor="#050000" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/emailLable_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:padding="2dp"
            android:text="Email Address"
            android:textColor="#040000" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailTxtLayout_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailText_SU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textColor="#050000" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/passwordLable_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:padding="2dp"
            android:text="Password"
            android:textColor="#040000" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTxtLayout_SU"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#655E5E">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordText_SU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="23px"
                android:textColor="#050000" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/confirmPasswordLable_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:padding="2dp"
            android:text="Confirm Password"
            android:textColor="#040000" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmPasswordTxtLayout_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#655E5E">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textColor="#050000" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:spinnerMode="dropdown" />


        <Button
            android:id="@+id/signupBtn_SU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/purple_500"
            android:text="Sign Up"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alreadyHaveAnAccountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="already have an account?   "
                android:textAlignment="textEnd"
                android:textColor="#5C5959" />

            <Button
                android:id="@+id/signInBtn_SU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E4E2E2"
                android:clipToOutline="false"
                android:padding="0px"
                android:text="Sign In"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>